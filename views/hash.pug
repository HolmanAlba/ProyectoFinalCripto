extends layout

block content
  .container

    h1 SHA512 #{__('Hash')}
    .well#well1
      form.form-horizontal

        .form-group
          label.col-sm-2.control-label(for='data') #{__('Data')}:
          .col-sm-10
            textarea#data.form-control(rows='10')

        .form-group
          label.col-sm-2.control-label(for='hash') #{__('Hash')}:
          .col-sm-10
            textarea#hash.form-control(rows='8', disabled)

  script.
    function getText(block, chain) {
      return $('#data').val();
    }

    $(function() {
      $('#data').bind('input propertychange', function() {
        $('#hash').val(sha512());
      });
    });

    $('#hash').val(sha512());
